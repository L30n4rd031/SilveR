@section Scripts {
    <environment names="Development">
        <script defer src="~/js/data/dataUploader.js"></script>
    </environment>
    <environment names="Production">
        <script defer src="~/js/data/dataUploader.min.js"></script>
    </environment>
}

@{
    ViewBag.Title = "Data Uploader";
}
<h2>@ViewBag.Title</h2>
<br />
<h4>Select a file to upload.</h4>

<form method="post">

    <div class="mt-4">
        <input name="files" id="files" type="file" />
    </div>

    <div class="mt-4">
        <button class="btn btn-primary btn-lg" type="submit">Upload</button>
    </div>
</form>